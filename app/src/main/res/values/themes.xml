<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RecipeFinderApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.Search" parent="Theme.RecipeFinderApp">
        <item name="android:editTextColor">@color/black</item>
        <item name="indicatorColor">@color/transparent</item>
        <item name="iconTint">@color/darkGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:searchHintIcon">@drawable/ic_search</item>
        <item name="hintTextAppearance">@style/hintTextStyle</item>
    </style>

    <style name="hintTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="CustomTabTextAppearance">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>